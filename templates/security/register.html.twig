{% extends "frontend/base.html.twig" %}
{% block body %}
<h1 class="h3 my-3 col-12 text-center">Inscription</h1>
<section class="col-lg-6 col-md-10 col-sm-12 mx-auto bg-primary text-white rounded p-2">
    {{ form_start(form) }}
    <div class="form-row">
        <div class="form-group col-lg-6 col-sm-12">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group col-lg-6 col-sm-12">
            {{ form_row(form.first_name) }}
        </div>
        <div class="form-group col-lg-6 col-sm-12">
            {{ form_row(form.password) }}
        </div>
        <div class="form-group col-lg-6 col-sm-12">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group col-12 text-right">
            <input type="submit" value="Inscription" class="btn btn-success">
        </div>
    </div>
    {{ form_end(form) }}
</section>



{% endblock %}