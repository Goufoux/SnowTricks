{% extends "backend/base.html.twig" %}
{% block body %}
<h1 class="col-12">Liste des groupes ({{ groups|length }}) </h1>
<section class="col-12">
    <div class="row justify-content-center">
        {% for group in groups %}
        <div class="card bg-primary col-xl-2 col-lg-3 col-md-4 col-sm-6 m-2">
            <h5 class="card-header text-secondary">
                {{ group.label }}
            </h5>
            <div class="row justify-content-center">
                <a href="{{ url('app_admintrickgroup_update', {trickGroup: group.id} ) }}" class="btn btn-info m-2">
                    <i class="fa fa-pencil"></i>
                </a>
                <a href="{{ url('app_admintrickgroup_remove', {trickGroup: group.id} ) }}" class="btn btn-danger m-2">
                    <i class="fa fa-trash"></i>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

{% endblock %}